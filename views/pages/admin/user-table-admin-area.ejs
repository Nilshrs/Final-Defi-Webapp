

<div class="container my-auto">
    <a class="text-white " href="/welcome">‚ùÆ</a>
    <h1>User Overview </h1>

<form action="/admin/user-find-by-name" method="post">
    <div class="form-outline">
        <input  name="namePrefix" type="search" placeholder="Start of name or full name" id="form1" class="form-control"
               pattern="^[a-zA-Z]{1,50}$" required/>
        <input type="hidden" name="_csrf" value="<%= _csrf %>"/>
        <label class="form-label" for="form1"></label>
    </div>
</form>
</div>

<div class="container tbl-container">
    <div class="row">
        <div class="col-12">
            <div class="table overflow-auto">
                <table class="table table-striped table-dark">
                    <thead class="sticky-top">
                    <tr class="">
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Password</th>
                        <th>Admin Status</th>
                        <th>Delete</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% if (userData) { %>
                        <% userData.forEach( (user) => { %>
                            <tr>
                                <td>
                                    <%= user.id  %>
                                </td>
                                <td>
                                    <%= user.fullName %>
                                </td>
                                <td>
                                    <%= user.emailAddress %>
                                </td>
                                <td>
                                    <%= user.password%>
                                </td>
                                <td>
                                    <%= user.isSuperAdmin %>
                                </td>
                                <td>
                                    <% if(!admin.isSuperAdmin && user.isAdmin) { %>

                                    <a onclick=" return alert( 'You are not allowed to delete an Admin only Super Admins can do that!');" class="btn btn-delete bg-secondary">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                            <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
                                        </svg>
                                    </a>

                                    <% } else { %>
                                    <a href="/admin/delete-user/<%= user.id %> " onclick=" return confirm('Do you really want to delete user <%= user.fullName %>');" class="btn btn-delete bg-danger">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                            <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
                                        </svg>
                                    </a>
                                    <% } %>
                                </td>
                            </tr>
                    <% }); } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
