<div class="container">

    <div class="row">
        <div class="col-10">
            <a class="text-white text-decoration-none " href="/trans-01/<%-tokenType%>">‚ùÆ</a>
        </div>
        <div class="col-2 d-flex justify-content-end">
            <a class="text-white text-decoration-none " href="/welcome">X</a>

        </div>
    </div>


    <h1>Add Transaction:</h1>
    <div class="row">
        <div class="col-md-12">
            <p>Token:   <%-tokenData.name%> <br>
            Price:    <%-tokenData.price %> $ </p>
            <div>
                <% if( transData) { %>
                <% if( transData[0] ) {  %>
                <p> You have <span style="color: #1ef552"><%-transData[0].amount%> </span> <%-tokenData.name%> with a value of <%-transData[0].currentValue%>$</p>
                <% }}; %>
            </div>

        </div>
    </div>
    <div class="row">
        <div class="form" >
            <form action="/trans-03" method="post">
                <div class="form-group">
                    <label class="col-sm-2 col-form-label" for="amount">Amount</label>
                        <% if(transData[0]) { %>
                            <input type="number" step=".01" class="form-control" id="amount" name="amount" placeholder="Enter amount" required min="<%- (-1) * (transData[0].amount) %>">
                            <input type="hidden" name="_csrf" value="<%= _csrf %>"/>

                <% } else { %>
                            <input type="number" step=".01" onclick="regex()" class="form-control " id="amount" name="amount" placeholder="Enter amount" required min="0" >
                            <input type="hidden" name="_csrf" value="<%= _csrf %>"/>
                    <% }; %>
                    </div>
                <button id="defi-button-mobile"type="submit" class="btn btn-primary mt-4">Submit</button>
            </form>
        </div>
    </div>

    <!-- Display an alert if user manages to bypass the client side input controle -->
    <% if (req.session.message !== 0) { %>
        <script> alert( '<%- req.session.message %>') </script>
    <% } %>

</div>
