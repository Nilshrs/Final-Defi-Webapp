<div class="container">
    <h1>Token Transfer</h1>
    <div class="row">
        <div class="col-md-12">
            <p>Token Name: <%-tokenData.name%></p>
            <p>Token price: <%-tokenData.price %></p>
            <div>
                <% if( transData[0] ) {  %>
                <p> You have <span style="color: #1ef552"><%-transData[0].amount%> </span> <%-tokenData.name%> Token with a value of <%-transData[0].currentValue%>$</p>
                <% }; %>
            </div>

        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <form action="/trans-03" method="post">
                <div class="form-group">
                    <label for="amount">Amount:</label>
                    <input type="number" class="form-control" id="amount" name="amount" placeholder="Enter amount" required>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>
