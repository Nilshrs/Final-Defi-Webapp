<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/chart.js"></script>


<div id="portfolio-overview" v-cloak>

    <div class="container mb-3">
        <a class="text-white " href="/welcome">❮</a>
        <div class="row">
            <div class="col-8 ">
                <h1>Your Portfolio </h1>
            </div>
            <div class="col-3 d-flex justify-content-end">
                    <a href="/trans" class="text-reset btn ml-auto" id="defi-button-mobile" style="margin-right: 0">+|-</a>
            </div>
        </div>
    </div>



    </div>
    <div class="container my-auto " style="max-height: 500px; min-height: 100px;">
        <div class = "chartBox d-flex justify-content-center" style="height: 500px">
            <canvas id="myChart"  height="500px" aria-label="Hello ARIA World" role="img"></canvas>
        </div>
    </div>

<% if( tokenData[0].totalProfit !== 'undefined' ) { %>
    <div class="container text-center font-weight-bold my-sm-5 my-1 ">
        <% if( tokenData[0].totalProfit == 0 ) { %>
            <p> Update token prices to see profit/loss</p>
            <% }else if( tokenData[0].totalProfit >= 0 ) { %>
                <p id="totalProfit"> Your Profit is <span style="color: green"><%- tokenData[0].totalProfit %></span> $</p>
            <% } else if( tokenData[0].totalProfit < -99999.99 ) { %>
                    <p id="totalProfit"> Oh, oh you lost <span style="color: red"><%- tokenData[0].totalProfit %></span> $  <br>
                         Need Help ? <br> Here is the number for the National Suicide Prevention Lifeline: 1 800 273 </p>
            <% } else { %>
                <p id="totalProfit"> You already lost <span style="color: red"><%- tokenData[0].totalProfit %></span> $</p>
            <% }  %>
    </div>
<% } %>



    <div class="container tbl-container">
        <div class="row">
            <div class="col-12">
            <div class="table overflow-auto">
                <table class="table table-striped table-dark">
                    <thead class="sticky-top">
                    <tr class="">
                        <th>Token</th>
                        <th>Amount</th>
                        <th>Value</th>
                        <th>Change</th>
                        <th>%</th>
                        <th>±</th>
                    </tr>
                    </thead>
                    <tbody >
                        <% if (tokenData) { %>
                            <% tokenData.forEach( token => { %>
                                <tr>
                                    <td>
                                        <%= token.symbol; %>
                                    </td>
                                    <td>
                                        <%= token.amount; %>
                                    </td>
                                    <td>
                                        <%= token.currentValue; %>$
                                    </td>
                                    <% if (token.profitInUSD > 0) { %>
                                        <td style="color: green">
                                    <% } else { %>
                                        <td style ="color: red">
                                    <% } %>
                                        <%- token.profitInUSD %>$
                                    </td>
                                    <% if (token.profitInPercent > 0) { %>
                                    <td style="color: green">
                                        <% } else { %>
                                    <td style ="color: red">
                                        <% } %>
                                        <%= token.profitInPercent; %>%
                                    </td>
                                    <td>
                                        <a class="text-decoration-none text-white" href="/trans-02/<%=token.id%>">±</a>
                                    </td>
                                </tr>
                        <% }); }%>
                        </tbody>
                </table>
            </div>
        </div>
        </div>
    </div>
</div>

    <!-- Needs to be there to be queried by function createChart() in portfolio-overview.page-js !-->
    <div id ="token" hidden="hidden" >
        <%= JSON.stringify(tokenData);  %>
    </div>
    <div id="pV" hidden="hidden">
        <%- portfolioValue%>$
    </div>

<script>
  let token = '<%- JSON.stringify(tokenData) %>'  ;
  token = JSON.parse(token);

</script>

</div>

<style>
  .table th:first-child,
  .table td:first-child {
    position: sticky;
    left: 0;
  }
  #totalProfit {
    font-weight: bold;

  }
</style>



