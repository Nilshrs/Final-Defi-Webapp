

<main>
    <div class="container mb-5">
        <div class="row">
            <div class="col-10">
                <a class="text-white text-decoration-none " href="/trans">‚ùÆ</a>
            </div>
            <div class="col-2 d-flex justify-content-end">
                <a class="text-white text-decoration-none " href="/welcome">X</a>

            </div>
        </div>
        <div class="row">
            <h1> All <%-type%> token: </h1>

        </div>
        <form action="/portfolio/searchToken" method="post">
            <div class="form-outline">
                <input name="name" type="text" type="search" class="form-control" placeholder="search" pattern="^[a-zA-Z]{1,10}$" required>
            </div>
        </form>
    </div>


    <div class="container tbl-container d-block d-sm-none">
        <div class="row tbl-fixed">
            <div class="table">
                <table class="table table-striped table-dark">
                    <thead class="sticky-top">
                    <tr class="">
                        <th>Token</th>
                        <th>Price</th>
                        <th> </th>
                    </tr>
                    </thead>
                        <tbody >
                        <% if (tokens) { %>
                            <% tokens.forEach( token => { %>
                                <tr>
                                    <td >
                                        <%= token.name; %> - <%= token.currency; %>
                                    </td>
                                    <td>
                                        <%= token.price; %>
                                    </td>
                                    <td>
                                        <a class="text-decoration-none" style="color: deeppink" href="/trans-02/<%=token.id%>">+</a>
                                    </td>
                                </tr>
                        <% }); }%>
                        </tbody>
                    <tbody>
                </table>
            </div>
        </div>
    </div>


    <!--Mobile Version -->
    <div class="container tbl-container d-none d-sm-block ">
        <div class="row tbl-fixed">
            <div class="table">
                <table class="table table-striped table-dark">
                    <thead class="sticky-top">
                    <tr class="">
                        <th>Token</th>
                        <th>Currency</th>
                        <th>Price</th>
                        <th></th>
                    </tr>
                    </thead>

                    <tbody >
                    <% if (tokens) { %>
                        <% tokens.forEach( token => { %>
                            <tr>
                                <td>
                                    <%= token.name; %>
                                </td>
                                <td>
                                    <%= token.currency; %>
                                </td>
                                <td>
                                    <%= token.price; %>
                                </td>
                                <td>
                                    <a class="text-decoration-none" style="color: deeppink" href="/trans-02/<%=token.id%>">+</a>
                                </td>
                            </tr>
                    <% }); }%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</main>
