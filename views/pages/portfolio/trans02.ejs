<main>
    <div class="container mb-5">
        <form action="/portfolio/searchToken" method="post">
            <div class="form-outline">
                <input name="name" type="text" type="search" class="form-control" placeholder="search" pattern="^[a-zA-Z]{1,10}$" required>
            </div>
        </form>
    </div>

    <div class="container tbl-container">
        <div class="row tbl-fixed">
            <div class="table">
                <table class="table table-striped table-dark">
                    <thead class="sticky-top">
                    <tr class="info">
                        <th>Token</th>
                        <th>Currency</th>
                        <th>Price</th>
                        <th></th>
                    </tr>
                    </thead>

                    <tbody >
                    <% if (tokens) { %>
                        <% tokens.forEach( token => { %>
                            <tr>
                                <td>
                                    <%= token.name; %>
                                </td>
                                <td>
                                    <%= token.currency; %>
                                </td>
                                <td>
                                    <%= token.price; %>
                                </td>
                                <td>
                                    <a class="text-decoration-none" style="color: greenyellow" href="/trans-02/<%=token.id%>"> Add </a>
                                </td>
                            </tr>
                    <% }); }%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</main>
