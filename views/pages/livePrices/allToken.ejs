
<main>
    <div class="container">
        <a class="text-white " href="/welcome">‚ùÆ</a>
        <div class="row mb-4">
            <div class="col-md-6 mb-2 d-block">
                <h1>DeFiChain Token</h1>
            </div>
            <div class="col d-none d-md-block">
                <a class = "text-white text-decoration-none btn " id = "defi-button" href="/watchlist" > WATCHLIST</a>
            </div>
            <div class="row d-md-none d-sx-block ">
                    <a class = "text-white text-decoration-none btn" id = "defi-button-mobile" href="/watchlist">WATCHLIST</a>
            </div>

        </div>
    <div class="row">
        <form action="/token/name" method="post">
            <div class="form-outline">
                <input name="name" type="search" placeholder="Search" id="form1" class="form-control"  pattern="^[a-zA-Z]{1,10}$" min="0" required>
                <input type="hidden" name="_csrf" value="<%= _csrf %>"/>
                <label class="form-label" for="form1"></label>
            </div>

        </form>
    </div>


        <div class="container tbl-container">
        <div class="row tbl-fixed">
            <div class="table">
                <table id="tb" class="table table-striped table-dark">
                    <thead class="sticky-top">
                    <tr class="info">
                        <th>Token</th>
                        <th>Currency</th>
                        <th>Price</th>
                    </tr>
                    </thead>

                    <tbody >
                    <% if (tokens) { %>
                        <% tokens.forEach((token) => { %>
                            <tr>
                                <td>
                                    <%= token.name; %>
                                </td>
                                <td>
                                    <%= token.currency; %>
                                </td>
                                <td>
                                    <%= token.price; %>
                                </td>
                            </tr>
                    <% }); }%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    </div>
</main>
